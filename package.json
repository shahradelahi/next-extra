{
  "name": "next-extra",
  "version": "0.3.0",
  "description": "next-extra offers additional methods not included in the standard Next package, such as searchParams and pathname.",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "license": "MIT",
  "repository": "github:shahradelahi/next-extra",
  "homepage": "https://github.com/shahradelahi/next-extra",
  "keywords": [
    "next",
    "react"
  ],
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./action": {
      "require": "./dist/action.cjs",
      "import": "./dist/action.js"
    },
    "./context": {
      "require": "./dist/context.cjs",
      "import": "./dist/context.js"
    },
    "./pathname": {
      "require": "./dist/pathname.cjs",
      "import": "./dist/pathname.js"
    }
  },
  "types": "./dist",
  "typesVersions": {
    "*": {
      "action": [
        "dist/action.d.cts",
        "dist/action.d.ts"
      ],
      "context": [
        "dist/context.d.cts",
        "dist/context.d.ts"
      ],
      "pathname": [
        "dist/pathname.d.cts",
        "dist/pathname.d.ts"
      ]
    }
  },
  "files": [
    "/dist/**/*",
    "/src/**/*",
    "!**/*.test.*"
  ],
  "packageManager": "pnpm@8.15.7",
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "mocha \"**/*.test.ts\" --retries 2",
    "prepublishOnly": "pnpm test && pnpm lint && pnpm format:check && pnpm build"
  },
  "dependencies": {
    "@edge-runtime/cookies": "^4",
    "deepmerge": "^4",
    "next": "^14",
    "p-safe": "^1",
    "react": "^18"
  },
  "peerDependencies": {
    "next": "^14",
    "react": "^18"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@sindresorhus/tsconfig": "^5.0.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "prettier": "^3.3.1",
    "tsup": "^8.1.0",
    "tsx": "^4.15.2",
    "typescript": "^5.4.5"
  }
}
